
<h1>User info</h1>

<% if @user.errors.any?  %>
  <div style="color: red;" id="error_explanation">
    <h2 ><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>


  <%= form_for(@user) do |f| %>

  	<div class="">Name <%= f.text_field :name, autofocus: true, placeholder:"名前"%></div>

	<div class="">Image</div>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
    <div class="">Introduction <%= f.text_area :introduction, autofocus: true %></div>


    <%= f.submit "Update User" %>

   <% end %>