<div class="container">
	<div class="row">

	    <div class="col-md-3" >

			<%= render 'books/sidebar', book: @book ,user: @user %>
		</div>

		<div class="col-md-9" >
		<h2>Books</h2>

		<table class="table table-striped">
		<tr>
			<th>image</th><th>name</th> <th></th>
		</tr>

		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :profile_image,:fill, 50, 50, fallback: "no_image.jpg" %></td>
			<td><%= user.name %></td>
			<td><%= link_to 'show', user_path(user.id) %></td>
		</tr>
		<% end %>
	    </table>
	    </div>
	 </div>
</div>