

<div class="container">
	<div class="row">

	    <div class="col-xs-3" >
		<%= render 'books/sidebar', book: @book ,user: @user %>
		</div>


		<div class="col-xs-9" >
		<h1>Books</h1>

			<table class="table table-striped">
			<tr>
				<th></th><th>Title</th><th>Opinion</th>
			</tr>

			<% @books.each do |book| %>
			<tr>
				<td>
					<%= link_to user_path(book.user.id) do %>
					<%= attachment_image_tag book.user, :profile_image,:fill, 50, 50, fallback: "no_image.jpg" %>
					<% end %>
				</td>
				<td>
					<%= link_to book_path(book) do%>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		    </table>
	    </div>

    </div>
</div>
