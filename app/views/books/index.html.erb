

<div class="container">
	<div class="row">

	    <div class="col-md-3" >
		<%= render 'books/sidebar', book: @book ,user: @user %>
		</div>


		<div class="col-md-9" >
		<h1>Books</h1>

			<table class="table table-striped">
			<tr>
				<th>name</th><th>Title</th> <th>Opinion</th>
			</tr>

			<% @books.each do |book| %>
			<tr>
				<td><%= book.user.name %></td>
				<td><%= link_to book_path(book.id) do%>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		    </table>
	    </div>

    </div>
</div>
